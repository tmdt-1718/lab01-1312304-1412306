<div class="container">
<div class="row">
     
     <% @b.each do |item| %>
        <div class="container" style="margin-top: 50px" >
            <div class="col-sm-3">
                <h4 class="pull-right">
                User: <%= item.title %>
                </h4>
            </div>

            <div class="row">
                <div class="col-md-4" >
                    <a href="#" class="thumbnail"   >
                    <%= image_tag item.avatar.url, :size => "250x250" if item.avatar? %>
                    </a>
                </div>
                <div class="col-md-8" >
                   <p><%= item.content %></p><a href="#">Read more</a>
                </div>
            </div>      

          
        </div>
        <% end %> 
</div>
</div>